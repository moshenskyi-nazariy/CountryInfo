<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_shade"/>
            <corners android:radius="@dimen/shape_radius"/>
        </shape>
    </item>

    <item
        android:bottom="@dimen/shadow_margin_bottom"
        android:left="@dimen/shape_margin_left"
        android:right="@dimen/shape_margin_right"
        android:top="@dimen/shape_margin_top">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryLight"/>
            <corners android:radius="@dimen/shape_radius"/>
        </shape>
    </item>
</layer-list>