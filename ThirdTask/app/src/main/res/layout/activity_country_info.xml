<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.example.nazarii_moshenskyi.cityinfo.ui.show_info.CountryInfoActivity">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/country_name_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/info_layout_margin"
            android:background="@drawable/info_item_shape"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margins"
                android:text="@string/sockets_title"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/info_item_text" />

            <TextView
                android:id="@+id/sockets_and_plugs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margins"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/info_item_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/info_layout_margin"
            android:background="@drawable/info_item_shape"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margins"
                android:text="@string/languages_title"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/info_item_text" />

            <TextView
                android:id="@+id/languages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margins"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/info_item_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/info_layout_margin"
            android:background="@drawable/info_item_shape"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margins"
                android:text="@string/vaccinations_title"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/info_item_text" />

            <TextView
                android:id="@+id/vaccinations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margins"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/info_item_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/info_layout_margin"
            android:background="@drawable/info_item_shape"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margins"
                android:text="@string/advises_title"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/info_item_text" />

            <TextView
                android:id="@+id/advises"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margins"
                android:textColor="@color/colorPrimaryText"
                android:linksClickable="true"
                android:textSize="@dimen/info_item_text" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>